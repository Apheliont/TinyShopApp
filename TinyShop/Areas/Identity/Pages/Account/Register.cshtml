@page
@model RegisterModel
@using TinyShop
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<App> Localizor

<div class="row">
    <div class="ui placeholder segment">
        <div class="ui one column very relaxed stackable grid">
            <div class="centered row">
                <h1 class="two wide left" style="padding: 0px">
                    @Localizor["Register"]
                </h1>
            </div>
            <div class="row">
                <div class="column">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="ui form">
                        <div asp-validation-summary="All" class="form_validationInfo"></div>
                        <div class="field">
                            <div class="ui left icon input">
                                <input asp-for="Input.Email" placeholder="@Localizor["Email"]">
                                <i class="user icon"></i>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <input type="password" asp-for="Input.Password" placeholder="@Localizor["Password"]">
                                <i class="lock icon"></i>
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <input type="password" asp-for="Input.ConfirmPassword" placeholder="@Localizor["ConfirmPassword"]">
                                <i class="lock icon"></i>
                            </div>
                        </div>
                        <button class="ui button" type="submit">@Localizor["Register"]</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
