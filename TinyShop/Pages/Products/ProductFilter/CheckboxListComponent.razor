@if (CheckboxList is not null)
{
    <div class="list">
        @foreach (string name in CheckboxList.Names)
        {
            <div class="item">
                <div class="ui child checkbox">
                    <input type="checkbox" @onchange="async () => await ChangeCheckboxState(name)">
                    <label>@name</label>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public CheckboxListType CheckboxList { get; set; }

    [Parameter]
    public String ComponentUniqueName { get; set; }

    [Parameter]
    public EventCallback OnChange { get; set; }

    private async Task ChangeCheckboxState(string name)
    {
        if (CheckboxList.ChangeCheckboxState(name))
        {
            await OnChange
            .InvokeAsync();
        }
    }
}
